@go.Package { name = "github.com/Mind2Screen-Dev-Team/go-skeleton/gen/appconfig" }
module AppConfig

import "MySQLConfig.pkl"
import "NatsConfig.pkl"
import "RedisConfig.pkl"

import "package://pkg.pkl-lang.org/pkl-go/pkl.golang@0.8.0#/go.pkl"

class AppHttp {
    port: Int
    idleTimeout: Int
    readHeaderTimeout: Int
    readTimeout: Int
    writeTimeout: Int
    handlerTimeout: Int
}

// main app configuration
appName: String
appDomain: String
appHost: String
appJwtSecret: String
appLogPath: String

// app http configuration
appHttp: AppHttp

// mysql configuration
mysql: MySQLConfig

// redis configuration
redis: RedisConfig

// nats configuration
nats: NatsConfig